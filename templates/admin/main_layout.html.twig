<!DOCTYPE html>
<html>
	<head>
		{% block javascripts %}
			<script src="{{ asset('admin/js/jquery-1.8.0.min.js') }}"></script>
			<script src="{{ asset('admin/js/scripts.js') }}"></script>
		{% endblock %}
		{% block stylesheets %}
			<link href="{{ asset('admin/css/style.css') }}" rel='stylesheet' language="text/css"/>
		{% endblock %}
	</head>
	<body>
		{% block startofbody %}{% endblock %}
		
		<header style='background: #ccc; height: 30px; margin:0; padding: 0;'>
		{% block header %}
			<h1 style='font-size: 1.1em; margin: 0; font-family: arial;'>DornCMS 2</h1>
		{% endblock %}
		</header>
		
		<div id='content'>
		{% block content %}
		
		{% endblock %}
			<div style='clear:both;'></div>
		</div>
		
		<footer>
		{% block footer %}
		
		{% endblock %}
		</footer>
		
		{% block endofbody %}{% endblock %}
	</body>
</html>
